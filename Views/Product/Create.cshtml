        height: 90px
    }

    .box-img img {
        width: 100%;
        height: 100%;
        object-fit: cover
    }

    .box-img:hover .btn-close {
        display: inline-block
    }

    .box-img .btn-close {
        position: absolute;
        top: 0;
        right: -2px;
