                        "Color_Id": fomart_split(colorcheckboxes[i].value, 0),
                        "Pro_ID": $('#SPCode').val()
                    })
                }
                console.log(arrprocolor);
            }
            if ($('input[name="sizeAll"]:checked').val() == "sizeAll") {
