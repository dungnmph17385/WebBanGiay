                    js_Loading(true, 1);
                },
                success: function (data) {
                    if (data.code == 1) {
                        $('#Rewrite').val(data.link.Link + ".html");
                    }
                    if (data.code == 2) {
                        $('#Rewrite').val(data.link.Link1 + ".html");
                    }
                    if (data.code == 3) {
